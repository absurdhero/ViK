#!/usr/bin/env ruby

require 'optparse'

def run(files)
  require 'screen'
  require 'text_buffer'
  require 'editor'

  screen = CursesScreen.new

  screen.status_bar.right("ViK")
  screen.refresh

  text = TextBuffer.new

  editor = Editor.new(screen, text)
  editor.run
end

optparse = OptionParser.new do|opts|
    opts.banner = "Usage: vik [options] file1 file2 ..."

    opts.on( '-h', '--help', 'Display this screen' ) do
        puts opts
        exit
    end
end

optparse.parse!

run(ARGV)
